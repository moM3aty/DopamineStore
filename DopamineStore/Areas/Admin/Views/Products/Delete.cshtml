@model DopamineStore.Models.Product
@{
    ViewData["Title"] = "حذف المنتج";
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="alert alert-danger d-flex align-items-center" role="alert">
    <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
    <div>
        <h4 class="alert-heading">هل أنت متأكد؟</h4>
        <p class="mb-0">سيتم حذف هذا المنتج وجميع صوره نهائياً ولا يمكن التراجع عن هذا الإجراء.</p>
    </div>
</div>

<div class="content-card">
    <div class="card-header bg-transparent">
        <h5 class="mb-0">تفاصيل المنتج المراد حذفه</h5>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-4">
                <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://placehold.co/300x300/F4E1E6/A64B63?text=Product" : Model.ImageUrl)" class="img-fluid rounded" />
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">اسم المنتج</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">القسم</dt>
                    <dd class="col-sm-8">@Model.Category?.Name</dd>

                    <dt class="col-sm-4">السعر</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                    <dt class="col-sm-4">الكمية بالمخزون</dt>
                    <dd class="col-sm-8">@Model.StockQuantity</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 text-end">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-secondary">إلغاء</a>
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-2"></i>تأكيد الحذف</button>
    </form>
</div>
