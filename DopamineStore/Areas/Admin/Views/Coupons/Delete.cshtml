@model DopamineStore.Models.Coupon
@{
    ViewData["Title"] = "حذف الكوبون";
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="alert alert-danger d-flex align-items-center" role="alert">
    <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
    <div>
        <h4 class="alert-heading">هل أنت متأكد؟</h4>
        <p class="mb-0">سيتم حذف هذا الكوبون نهائياً ولا يمكن التراجع عن هذا الإجراء.</p>
    </div>
</div>

<div class="content-card product-form-card">
    <div class="card-header bg-transparent">
        <h5 class="mb-0">تفاصيل الكوبون المراد حذفه</h5>
    </div>
    <div class="card-body p-4">
        <dl class="row">
            <dt class="col-sm-3">الكود</dt>
            <dd class="col-sm-9">@Model.Code</dd>

            <dt class="col-sm-3">نوع الخصم</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DiscountType)</dd>

            <dt class="col-sm-3">القيمة</dt>
            <dd class="col-sm-9">@Model.DiscountValue.ToString("N0") @(Model.DiscountType == DiscountType.Percentage ? "%" : "ج.م.")</dd>
        </dl>
    </div>
</div>

<div class="mt-4 text-end">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-secondary">إلغاء</a>
        <button type="submit" class="btn btn-danger">تأكيد الحذف</button>
    </form>
</div>
