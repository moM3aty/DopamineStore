@model DashboardViewModel
@using System.Globalization

@{
    ViewData["Title"] = "لوحة التحكم الرئيسية";
    var monthLabels = Enumerable.Range(0, 12)
        .Select(i => DateTime.Now.AddMonths(-(11 - i)).ToString("MMM", new CultureInfo("ar-EG")))
        .ToList();
}

@if (TempData["LowStockWarning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>تنبيهات انخفاض المخزون!</h4>
        <p>@Html.Raw(TempData["LowStockWarning"])</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>

<div class="row">
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="stat-card bg-primary text-white">
            <div class="card-body">
                <div>
                    <div class="h3">@Model.TotalProducts</div>
                    <div class="text-white-75">إجمالي المنتجات</div>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-boxes-stacked"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card stat-card bg-success text-white">
            <div class="card-body">
                <div>
                    <div class="h3">@Model.TotalOrders</div>
                    <div class="text-white-75">إجمالي الطلبات</div>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-file-invoice-dollar"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card stat-card bg-warning text-white">
            <div class="card-body">
                <div>
                    <div class="h3">@Model.TotalCategories</div>
                    <div class="text-white-75">إجمالي الأقسام</div>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-tags"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card stat-card bg-danger text-white">
            <div class="card-body">
                <div>
                    <div class="h3">@Model.TotalUsers</div>
                    <div class="text-white-75">إجمالي المستخدمين</div>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-4">
    <div class="col-lg-8 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header">
                <i class="fas fa-chart-line me-1"></i>
                المبيعات خلال آخر 12 شهر
            </div>
            <div class="card-body">
                <canvas id="salesChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header">
                <i class="fas fa-chart-pie me-1"></i>
                الأقسام الأكثر مبيعاً
            </div>
            <div class="card-body">
                <canvas id="categoryChart"></canvas>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header">
                <i class="fas fa-history me-1"></i>
                آخر 5 طلبات
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>رقم الطلب</th>
                                <th>اسم العميل</th>
                                <th>تاريخ الطلب</th>
                                <th>الإجمالي</th>
                                <th>الحالة</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RecentOrders != null && Model.RecentOrders.Any())
                            {
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td>#@order.Id</td>
                                        <td>@order.CustomerName</td>
                                        <td>@order.OrderDate.ToString("g")</td>
                                        <td>@order.TotalAmount.ToString("C")</td>
                                        <td><span class="badge rounded-pill bg-info">@order.OrderStatus</span></td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">التفاصيل</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">لا توجد طلبات حديثة.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Sales Chart
            var salesCtx = document.getElementById('salesChart').getContext('2d');
            new Chart(salesCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(monthLabels)),
                    datasets: [{
                        label: 'إجمالي المبيعات (ج.م)',
                        data: @Html.Raw(Json.Serialize(Model.MonthlySalesData)),
                        backgroundColor: 'rgba(233, 30, 99, 0.1)',
                        borderColor: 'rgba(233, 30, 99, 1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.3
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Category Chart
            var categoryCtx = document.getElementById('categoryChart').getContext('2d');
            new Chart(categoryCtx, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.CategoryNames)),
                    datasets: [{
                        label: 'عدد القطع المباعة',
                        data: @Html.Raw(Json.Serialize(Model.CategorySalesData)),
                        backgroundColor: [
                            '#E91E63', '#F48FB1', '#880E4F', '#AD1457', '#F06292'
                        ],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                }
            });
        });
    </script>
}
