<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - لوحة التحكم</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700;800&display=swap" rel="stylesheet">

    <link href="~/css/admin-style.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/admin-categories.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/admin-customers.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/admin-inventory.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/admin-orders.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/admin-products.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/admin-reviews.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/admin-roles.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/admin-theme.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/admin-user-roles.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="admin-body">
    <div class="admin-wrapper">
        <nav class="sidebar">
            <div>
                <a class="sidebar-brand d-flex justify-content-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" style="border-radius:50%;width:150px;" alt="Dopamine" />
                </a>
                <ul class="sidebar-nav nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-tachometer-alt fa-fw"></i> لوحة التحكم
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Orders" asp-action="Index">
                            <i class="fas fa-file-invoice-dollar fa-fw"></i> الطلبات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Products" asp-action="Index">
                            <i class="fas fa-boxes-stacked fa-fw"></i> المنتجات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Categories" asp-action="Index">
                            <i class="fas fa-tags fa-fw"></i> الأقسام
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Inventory" asp-action="Index">
                            <i class="fas fa-warehouse fa-fw"></i> المخزون
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="ShippingZones" asp-action="Index">
                            <i class="fas fa-shipping-fast fa-fw"></i> مناطق الشحن
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Reviews" asp-action="Index">
                            <i class="fas fa-star-half-alt fa-fw"></i> المراجعات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Customers" asp-action="Index">
                            <i class="fas fa-users fa-fw"></i> العملاء
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Roles" asp-action="Index">
                            <i class="fas fa-user-shield fa-fw"></i> إدارة الصلاحيات
                        </a>
                    </li>
                </ul>
            </div>
            <div class="sidebar-footer">
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-dark w-100">
                        <i class="fas fa-sign-out-alt fa-fw"></i> تسجيل الخروج
                    </button>
                </form>
            </div>
        </nav>

        <div class="main-content">
            <main role="main" class="container-fluid">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
