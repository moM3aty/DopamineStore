@model DopamineStore.Models.ShippingZone

@{
    ViewData["Title"] = "حذف منطقة الشحن";
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="alert alert-danger d-flex align-items-center" role="alert">
    <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
    <div>
        <h4 class="alert-heading">هل أنت متأكد؟</h4>
        <p class="mb-0">سيتم حذف هذه المنطقة نهائياً.</p>
    </div>
</div>

<div class="content-card">
    <div class="card-header bg-transparent">
        <h5 class="mb-0">تفاصيل المنطقة المراد حذفها</h5>
    </div>
    <div class="card-body p-4">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cost)</dt>
            <dd class="col-sm-9">@Model.Cost.ToString("C")</dd>
        </dl>
    </div>
</div>

<div class="mt-4 text-end">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-secondary">إلغاء</a>
        <button type="submit" class="btn btn-danger">تأكيد الحذف</button>
    </form>
</div>
