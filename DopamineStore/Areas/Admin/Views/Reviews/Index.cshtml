@model IEnumerable<Review>
@{
    ViewData["Title"] = "إدارة التقييمات";
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
</div>

<!-- Filter Card -->
<div class="content-card filter-card mb-4">
    <form asp-action="Index" method="get">
        <div class="row g-3 align-items-end">
            <div class="col-md-6">
                <label for="searchString" class="form-label">البحث باسم المنتج أو المراجع</label>
                <input type="text" class="form-control" name="searchString" id="searchString" value="@(ViewData["CurrentFilter"])">
            </div>
            <div class="col-md-4">
                <label for="rating" class="form-label">الفلترة بالتقييم</label>
                <select name="rating" id="rating" class="form-select" asp-items="@(new SelectList(Enumerable.Range(1, 5).Select(i => new { Value = i, Text = $"{i} نجوم" }), "Value", "Text", ViewData["CurrentRating"]))">
                    <option value="">كل التقييمات</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100"><i class="fas fa-filter me-2"></i>تصفية</button>
            </div>
        </div>
    </form>
</div>

<div class="reviews-container">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="review-admin-card" id="review-card-@item.Id">
                <div class="review-card-main">
                    <div class="review-product-info">
                        <img src="@(string.IsNullOrEmpty(item.Product?.ImageUrl) ? "https://placehold.co/100x100/F4E1E6/A64B63?text=P" : item.Product.ImageUrl)" alt="@item.Product?.Name">
                        <div>
                            <a class="product-link" asp-action="Edit" asp-controller="Products" asp-route-id="@item.ProductId">@item.Product?.Name</a>
                            <div class="review-rating-display">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= item.Rating ? "filled" : "")"></i>
                                }
                            </div>
                        </div>
                    </div>
                    <p class="review-comment">"@item.Comment"</p>
                </div>
                <div class="review-card-footer">
                    <div class="reviewer-info">
                        <i class="fas fa-user"></i>
                        <span>@item.ReviewerName</span>
                        <span class="text-muted mx-2">|</span>
                        <i class="fas fa-calendar-alt"></i>
                        <span>@item.ReviewDate.ToShortDateString()</span>
                    </div>
                    <div class="review-actions">
                        <div class="form-check form-switch approval-switch" title="الموافقة على الظهور في الموقع">
                            <input class="form-check-input" type="checkbox" data-id="@item.Id" @(item.IsApproved ? "checked" : "")>
                        </div>
                        <a asp-action="Delete" asp-controller="Reviews" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger btn-delete-review" title="حذف"><i class="fas fa-trash"></i></a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="content-card text-center p-5">
            <p class="lead text-muted">لا توجد مراجعات تطابق معايير البحث الحالية.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.approval-switch .form-check-input').on('change', function() {
                var checkbox = $(this);
                var reviewId = checkbox.data('id');
                var token = $('input[name="__RequestVerificationToken"]').val();
                var label = checkbox.siblings('.form-check-label');

                $.ajax({
                    type: 'POST',
                    url: '/Admin/Reviews/ToggleApproval/' + reviewId,
                    headers: {
                        'RequestVerificationToken': token
                    },
                    data: { id: reviewId },
                    success: function(response) {
                        if (response.success) {
                            label.text(response.newLabel);
                        } else {
                            checkbox.prop('checked', !checkbox.prop('checked'));
                            alert(response.message);
                        }
                    },
                    error: function() {
                        checkbox.prop('checked', !checkbox.prop('checked'));
                        alert('حدث خطأ أثناء تحديث الحالة.');
                    }
                });
            });
        });
    </script>
}
