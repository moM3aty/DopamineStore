@model IEnumerable<WishlistItem>
@{
    ViewData["Title"] = "قائمة المفضلة";
    Layout = "_ProfileLayout";
}

<h4 class="profile-content-title">@ViewData["Title"]</h4>
<div class="profile-content-card">
    @if (Model.Any())
    {
        <div class="row gy-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    @await Html.PartialAsync("_ProductCard", item.Product)
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-wishlist-container">
            <div class="icon"><i class="bi bi-heartbreak"></i></div>
            <h3>قائمة مفضلتك فارغة</h3>
            <p>أضف المنتجات التي تحبها هنا لتجدها بسهولة لاحقاً.</p>
            <a asp-controller="Home" asp-action="Index" class="btn-main">ابدأ التصفح</a>
        </div>
    }
</div>
