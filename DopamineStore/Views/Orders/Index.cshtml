@model IEnumerable<Order>
@{
    ViewData["Title"] = "طلباتي";
    Layout = "_ProfileLayout";
}

<h4 class="profile-content-title">@ViewData["Title"]</h4>
<div class="profile-content-card">
    <div class="order-history-table table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>رقم الطلب</th>
                    <th>التاريخ</th>
                    <th>الحالة</th>
                    <th>الإجمالي</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="order-id">#@order.Id</td>
                            <td>@order.OrderDate.ToString("yyyy/MM/dd")</td>
                            <td><span class="text-dark badge rounded-pill status-badge status-@order.OrderStatus.ToLower().Replace(" ", "-")">@order.OrderStatus</span></td>
                            <td class="fw-bold">@order.TotalAmount.ToString("C")</td>
                            <td class="text-end">
                                <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-view-details">عرض التفاصيل</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center p-4">لم تقم بأي طلبات بعد.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
