@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var currentUser = await UserManager.GetUserAsync(User);
    var userInitial = currentUser.FullName.FirstOrDefault();

    <li class="dropdown profile-dropdown">
        <a href="#" class="nav-link d-flex align-items-center" data-bs-toggle="dropdown">
            <div class="profile-avatar">@userInitial</div>
        </a>
        <ul class="dropdown-menu dropdown-menu-end">
            @if (User.IsInRole("Admin"))
            {
                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2"></i> لوحة التحكم</a></li>
                <li><hr class="dropdown-divider"></li>
            }
            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index"><i class="bi bi-person"></i> ملفي الشخصي</a></li>
            <li><a class="dropdown-item" asp-controller="Wishlist" asp-action="Index"><i class="bi bi-heart"></i> قائمة المفضلة</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                    <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right"></i> تسجيل الخروج</button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li><a class="nav-link" asp-controller="Account" asp-action="Login">تسجيل الدخول</a></li>
    <li><a class="getstarted" asp-controller="Account" asp-action="Register">إنشاء حساب</a></li>
}
